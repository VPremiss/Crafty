{
    "name": "vpremiss/crafty",
    "description": "Some essentials to rely on for TALL stack development.",
    "keywords": [
        "VPremiss",
        "laravel",
        "crafty"
    ],
    "homepage": "https://github.com/VPremiss/Crafty",
    "license": "MIT",
    "authors": [
        {
            "name": "GoodM4ven",
            "email": "GoodM4ven@proton.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "larastan/larastan": "^2.9",
        "orchestra/testbench": "^9.0.0||^8.22.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "VPremiss\\Crafty\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VPremiss\\Crafty\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "clear": "@php vendor/bin/testbench package:purge-crafty --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "VPremiss\\Crafty\\CraftyServiceProvider"
            ],
            "aliases": {
                "Crafty": "VPremiss\\Crafty\\Facades\\Crafty"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}